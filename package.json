{
  "name": "st-tools-hub",
  "version": "1.0.0",
  "description": "ST Tools Hub - Launcher centralizzato per applicazioni DHL by Simone Tosello",
  "author": "Simone Tosello (ST) <simone.tosello@dhl.com>",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "publish": "electron-builder --win --publish always",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^31.7.7",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.simonetosello.sttoolshub",
    "productName": "ST Tools Hub",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "config/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "ST-Tools-Hub-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ST Tools Hub",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico"
    },
    "publish": {
      "provider": "github",
      "owner": "ToseSenpai",
      "repo": "ST-Tools-Hub",
      "releaseType": "release"
    }
  },
  "keywords": [
    "electron",
    "launcher",
    "dhl",
    "st-tools",
    "app-manager"
  ]
}
